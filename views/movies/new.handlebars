<div class="row">
<div class="col-xs-12">
<h1><strong>New Movie Form</strong></h1>
</div>

<div class="col-xs-12">
  <form name="create-post" action="/add" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name="title" placeholder="Title">
  </div>
  <div class="form-group">
    <label>Year</label>
    <input type="text" name="year" placeholder="Year">
  </div>
  <div class="form-group">
    <label>Imdb</label>
    <textarea name="imdb" rows="" placeholder="Imdb"></textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
</div>
